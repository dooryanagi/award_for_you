<% if params[:user_id] %>
	<h2><i class="fa-solid fa-trophy"></i><%= @user.name %>さんのアワード一覧</h2>
<% elsif params[:applauses] %>
	<h2><i class="fa-solid fa-trophy"></i><%= @user.name %>さんが拍手を贈ったアワード一覧</h2>
<% else %>
	<h2><i class="fa-solid fa-trophy"></i>みんなのアワード一覧</h2>
<% end %>

アワードの受賞は
<%= link_to "こちら", new_award_path %>

<%= form_tag(awards_path, method: :get) do %>
	<%= select_tag :sort_by, options_for_select({'新しい順'=>'latest','古い順'=>'old','拍手の多い順'=>'applause_count'}, params[:sort_by]) %>
	<%= submit_tag '表示する' %>
<% end %>

<div>
	<% @awards.each do |award| %>
		<%= link_to award_path(award.id) do %>
			<%= image_tag award.get_award_image(150,150) %>
		<% end %>
		<% if user_signed_in? && award.applaused_by?(current_user) %>
			<%= link_to award_applause_path(award), method: :delete do %>
				<i class="fa-solid fa-hands-clapping"><%= award.applauses.count %></i>
			<% end %>
		<% else %>
			<%= link_to award_applause_path(award), method: :post do %>
				<i class="fa-solid fa-hands-clapping" style="color:gray;"><%= award.applauses.count %></i>
			<% end %>
		<% end %>
	<% end %>
</div>