<div class="row d-flex justify-content-center mb-3">
  <%= form_with url: searchs_search_path, method: :get do |f| %>
    大賞名検索：<%= f.text_field :content %>
    <%= f.submit "検索" %>
  <% end %>

  <%= form_with url: searchs_search_by_keyword_path, method: :get do |f| %>
    キーワード検索：<%= f.select :keyword_1, GrandPrize.keyword_1s.keys.map {|k| [I18n.t("enums.grand_prize.keyword_1.#{k}"), k]} %>
    <%= f.text_field :keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>