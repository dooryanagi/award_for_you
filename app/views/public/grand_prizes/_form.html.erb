<%= form_with model: grand_prize do |f| %>
<div class="row d-flex justify-content-center">
  <div class="colspan-2 col-8">
		<table class="table">
			<tr>
				<th>
					<%= f.label :grand_prize_image, "大賞のイメージ画像" %>
				</th>
				<td>
					<%= f.file_field :grand_prize_image, accept: 'image/*' %>
				</td>
			</tr>
			<tr>
				<th>
					<%= f.label :name, "大賞の名称" %>
				</th>
				<td>
					<%= f.text_field :name %>
				</td>
			</tr>
			<tr>
				<th>
					<%= f.label :introduction, "大賞の説明" %>
				</th>
				<td>
					<%= f.text_area :introduction %>
				</td>
			</tr>
			<tr>
				<th>
					<!--キーワード1のみデイリーかファースト〇〇かセレクトボックスで選ぶ（今後の拡張性を考慮）-->
					<%= f.label :keyword_1, "キーワード１" %>
				</th>
				<td>
					<%= f.select :keyword_1, GrandPrize.keyword_1s.keys.map {|k| [I18n.t("enums.grand_prize.keyword_1.#{k}"), k]} %>
				</td>
			</tr>
			<tr>
				<th>
					<%= f.label :keyword_2, "キーワード２" %>
				</th>
				<td>
					<%= f.text_field :keyword_2 %>
				</td>
			</tr>
			<tr>
				<th>
					<%= f.label :keyword_3, "キーワード３" %>
				</th>
				<td>
					<%= f.text_field :keyword_3 %>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<% if grand_prize.id == nil %>
						<%= f.submit "大賞を設立する", class: "btn btn-outline-dark btn-block" %>
					<% else %>
						<%= f.submit "変更を保存", class: "btn btn-outline-dark btn-block" %>
					<% end %>
				</td>
			</tr>
		</table>
	</div>
</div>

<% end %>
