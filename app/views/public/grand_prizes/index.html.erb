<div class="container my-3 p-3">
	<div class="row mx-2">
		<% if params[:event] %>
			<h2><i class="fa-solid fa-trophy"></i><%= @user.name %>さんが受賞した大賞一覧</h2>
		<% elsif params[:grand_prize] %>
			<h2><i class="fa-solid fa-trophy"></i><%= @user.name %>さんが設立した大賞一覧</h2>
		<% else %>
			<h2><i class="fa-solid fa-trophy"></i>大賞一覧</h2>
		<% end %>
	</div>

	<% unless params[:event] || params[:grand_prize] %>
		<div class="row my-4 p-3 search d-flex justify-content-between">
			<%= render 'public/searchs/form' %>
			<div>
				<%= link_to "  キーワード一覧  ", searchs_keyword_index_path, class: "btn btn-dark btn-block px-4" %>
			</div>
		</div>
	<% end %>

	<div class="row d-flex justify-content-between px-5 mt-5">
		<div>
			<% unless params[:event] || params[:grand_prize] %>
				<%= render 'sort', grand_prizes: @grand_prizes %>
			<% end %>
		</div>
		<div>
			<%= link_to "新たに大賞を立ち上げる", new_grand_prize_path, class: "btn btn-outline-dark btn-block" %>
		</div>
	</div>

	<%= render 'index', grand_prizes: @grand_prizes %>
</div>