<div class="container my-3">
  <h2>大賞一覧</h2>

  <%= link_to "新たに大賞を立ち上げる", new_admin_grand_prize_path, class: "btn btn-outline-info btn-block mb-3" %>

  <%= form_tag(admin_path, method: :get) do %>
  	<%= select_tag :sort_by, options_for_select({'受賞待ちが多い順'=>'waiting_event_count','新しい順'=>'latest','古い順'=>'old','受賞数が多い順'=>'event_count','賞賛の声が多い順'=>'praise_count'}, params[:sort_by]) %>
  	<%= submit_tag '表示する' %>
  <% end %>

  <table class="table mt-3">
    <thead>
      <tr>
        <th>
          写真
        </th>
        <th>
          名称
        </th>
        <th>
          説明
        </th>
        <th style="width: 7%">
          受賞<br>待ち
        </th>
        <th style="width: 7%">
          受賞
        </th>
        <th style="width: 7%">
          賞賛<br>の声
        </th>
        <th style="width: 7%">
        </th>
      </tr>
    </thead>
    <tbody>
      <% @grand_prizes.each do |grand_prize| %>
      <tr>
        <td>
          <%= image_tag grand_prize.get_grand_prize_image(50,50) %>
        </td>
        <td>
          <%= grand_prize.name %>
        </td>
        <td>
          <%= grand_prize.introduction %>
        </td>
        <td>
          <%= grand_prize.waiting_events.count %>件
        </td>
        <td>
          <%= grand_prize.events.count %>件
        </td>
        <td>
          <%= grand_prize.praises.count %>件
        </td>
        <td>
          <% if grand_prize.waiting_events.present? %>
            <%= link_to "授与", admin_grand_prize_path(grand_prize.id), class: "btn btn-danger btn-sm" %>
          <% else %>
            <%= link_to "確認", admin_grand_prize_path(grand_prize.id), class: "btn btn-dark btn-sm" %>
          <% end %>

        </td>
      </tr>
      <% end %>
    </tbody>
  </table>  

  <div class="row d-flex justify-content-center">
    <%= paginate @grand_prizes, theme: 'bootstrap-5' %>
  </div>
</div>