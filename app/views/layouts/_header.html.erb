<header>
  <!--退避： style="background-color: #f08080;"-->
  <nav class="navbar navbar-expand-lg navbar-dark border-bottom boder-secondary">
    <div class="container">

      <!--会員ログイン時-->
      <% if user_signed_in? %>

        <a class="navbar-brand" href="/"><span><%= image_tag "logo.png", size: "100x60" %></span></a>

        <!--使い方という言い方に変えるのも手-->
        <%= link_to "ABOUT", about_path %>

        <%= link_to "アワード一覧", awards_path %>
        <%= link_to "大賞一覧", grand_prizes_path %>

        <!--トロフィーマークとかで表示したい-->
        <%= link_to "アワードを受賞する", new_award_path %>

        <% if current_user.guest_user? %>
          <p>(!)ゲストユーザーとしてログイン中(!)</p>
        <% end %>

        <!--引数で(current_user)が必要？なくても行けるときもあったのに-->
        <!--長野ケーキの見本ではアクセスできていた?-->
        <!--あっても行けない、users_controllerを参照してくれない-->
        <%= link_to "マイページ", my_page_path %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

      <!--管理者ログイン時-->
      <% elsif admin_signed_in? %>

        <a class="navbar-brand" href="admin_path"><span><%= image_tag "logo.png", size: "100x60" %></span></a>

        <%= link_to "アワード一覧", admin_awards_path %>
        <%= link_to "大賞一覧", admin_path %>
        <%= link_to "会員一覧", admin_users_path %>

        <p>(!)管理者としてログイン中(!)</p>

        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>

      <!--未ログイン-->
      <% else %>

        <a class="navbar-brand" href="/"><span><%= image_tag "logo.png", size: "100x60" %></span></a>
        <%= link_to "ABOUT", about_path %>
        <%= link_to "アワード一覧", awards_path %>
        <%= link_to "大賞一覧", grand_prizes_path %>
        <%= link_to "ゲストログイン(機能制限あり)", users_guest_sign_in_path, method: :post %>
        <%= link_to "ログイン", new_user_session_path %>
        <%= link_to "新規登録", new_user_registration_path %>

      <% end %>
    </div>
  </nav>
</header>
